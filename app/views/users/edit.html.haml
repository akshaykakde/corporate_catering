= simple_form_for ([@user.company,@user]) ,{:html => {:class => "form-horizontal "}}do |f|
  .page-header
    %h1.text-center EDIT DETAILS 
  .row
    .col-md-8.col-md-offset-3

      .form-group
        =f.label :active,:class => "control-label col-md-2",:width => 50
        =f.check_box :active, {}, true,:class => "form-control", :id => @user.id, :class => "col-md-4"

      .text-center  
        =f.button "submit",:type => "submit",:class =>" btn btn-success btn-lg",:class => "col-md-2  col-md-offset-3"

