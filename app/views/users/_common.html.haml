
= simple_form_for ([@user.company,@user]),{:html => {:class => "form-horizontal"}} do |f|
	- if flash[:error].present?
		=flash[:error]
	.form-group
		=f.label :name,:class => "control-label col-sm-1"
		=f.text_field :name,:class => "form-control",:class => "col-sm-10"
	.form-group

		=f.label :email,:class => "control-label col-sm-1"
		=f.text_field :email,:class => "form-control",:class => "col-sm-10"
	.form-group


		=f.label :phone_no,:class => "control-label col-sm-1"
		=f.text_field :phone_no,:class => "form-control",:class => "col-sm-10"
	.form-group
	
		=f.label :password,:class => "control-label col-sm-1"
		=f.text_field :password,:class => "form-control",:class => "col-sm-10"
	
	.form-group
		=f.label :active,:class => "control-label col-sm-1"
		=f.check_box :active, {}, true,:class => "form-control",:class => "col-sm-10"
	.form-group

		=f.label :role,:class => "control-label col-sm-1"
		=f.text_field :role,:class => "form-control",:class => "col-sm-10"
	.text-center
		=f.button "submit",:type => "submit",:class =>" btn btn-success btn-lg",:class => "col-sm-10"

