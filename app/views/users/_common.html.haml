= simple_form_for ([@user.company,@user]),{:html => {:class => "form-horizontal "}} do |f|
	- if flash[:error].present?
		=flash[:error]
	.page-header
		%h1.text-center REGISTRATION FORM
	.row
		.col-md-8.col-md-offset-3
			.form-group
				=f.label :name,:class => "control-label col-md-2"
				=f.text_field :name,:class => "form-control",:class =>"col-md-4"
			.form-group

				=f.label :email,:class => "control-label col-md-2"
				=f.text_field :email,:class => "form-control",:class =>"col-md-4"
			.form-group
				=f.label :phone_no,:class => "control-label col-md-2"
				=f.text_field :phone_no,:class => "form-control",:class => "col-md-4",:float => 'center'
			.form-group		
				=f.label :password,:class => "control-label col-md-2"
				=f.text_field :password,:class => "form-control",:class => "col-md-4",:success => 'This checked out OK'
			
			.form-group
				=f.label :active,:class => "control-label col-md-2"
				=f.check_box :active, {}, true,:class => "form-control",:class => "col-md-4"
			.form-group

				=f.label :role,:class => "control-label col-md-2"
				=f.text_field :role,:class => "form-control",:class => "col-md-4"
			.text-center
				=f.button "submit",:type => "submit",:class =>" btn btn-success btn-lg",:class => "col-md-2	 col-md-offset-3"

