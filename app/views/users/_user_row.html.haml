
%tr

  %td
    =link_to company_user_path(@company.id,user.id) do
      .text-center
        #{user.name}

  %td{:width => "200px"}
    .text-center
      -if first_method?(user) 
        = "INACTIVE"
      -else 
        = "ACTIVE"
        
  %td 
    -if user.active == false
      =link_to company_user_path(@company.id,user.id,'user[active]' => first_method?(user),'change_status' => 'true'), class: 'activate' do
        .text-center
          %button.btn.btn-success{:type => "button"}
            %span.glyphicon.glyphicon-ok-circle>
    -else 
      =link_to company_user_path(@company.id,user.id,'user[active]' => first_method?(user),'change_status' => 'true') , class: 'activate' do
        .text-center
          %button.btn.btn-danger{:type => "button"}
            %span.glyphicon.glyphicon-remove-circle>


       

  




 

  
  

   